<div class = "container">
  <h1><%= Team.find(current_user.team.to_i).name %>'s Totals Table</h1><br>
  <table class = "table table-striped table-bordered">
    <tr class ="info">
      <td><strong>Name</strong></td>
      <td><strong>Total Amount</strong></td>
    </tr>
	<% @counter = 0 %>
	<% @users.each do |u| %>
	<tr>
	  <% if u.leader? %>
	    <td><%= link_to u.fullname + " (Leader)", root_path %></td>
	  <% else %>
	    <td><%= link_to u.fullname, leaderlookup_path(:id => u.id) %></td>
	  <% end %>
      <td><%= @member_total_amount[@counter] %> </td>
	</tr>
	<% @counter += 1 %>
	<% end %>
    <tr>
      <td><strong>Overall (Does not include Leader's raised funds)</strong></td>
      <td><%= @total_amount %></td>
    </tr>
  </table>

</div>