<div class = "container">
  <h1>Team Totals Table</h1><br>
  <table class = "table table-striped table-bordered">
    <tr class ="info">
      <td><strong>Team</strong></td>
      <td><strong>Total Cash Amount</strong></td>
      <td><strong>Total Check Amount</strong></td>
      <td><strong>Total Amount</strong></td>
    </tr>
	<% Team.all.each do |team| %>
	<tr>
	  <td><strong><%= Team.find(team.id).name %></strong></td>
      <td><%= @team_total_cash[team.id - 1] %> </td>
      <td><%= @team_total_check[team.id - 1] %></td>
      <td><%= @team_total_amount[team.id - 1] %></td>
	</tr>
	<% end %>
	<tr>
	    <td><strong>Leaders</strong></td>
        <td><%= @team_total_cash[Team.all.size] %> </td>
        <td><%= @team_total_check[Team.all.size] %></td>
        <td><%= @team_total_amount[Team.all.size] %></td>
	</tr>
    <tr>
      <td><strong>Overall</strong></td>
      <td><%= @total_cash %> </td>
      <td><%= @total_check %></td>
      <td><%= @total_amount %></td>
    </tr>
  </table>

</div>
